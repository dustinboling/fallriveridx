<%= form_for(@broker, :html => {:class =>'form-stacked'}) do |f| %>

<%= error_messages_for(@broker) %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :street1 %>
  <%= f.text_field :street1 %>

  <%= f.label :street2 %>
  <%= f.text_field :street2 %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label :state %>
  <%= f.text_field :state %>

  <%= f.label :zip %>
  <%= f.number_field :zip %>

  <%= f.label :license_number %>
  <%= f.text_field :license_number %><br />

  <%= f.submit :class => "btn btn-success" %>

<% end %>
